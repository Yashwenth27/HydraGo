<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/auto_yellow">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bg_up"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.5"
        android:background="@color/metro_blue_dark"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="50dp"
        android:background="@drawable/round_white"
        android:outlineAmbientShadowColor="@color/white"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bg_up">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:maxHeight="100dp"
            android:src="@drawable/login_hero"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/welcom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="Welcome to HydraGo !"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <RelativeLayout
            android:id="@+id/verto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/welcom"
            android:padding="4dp"
            android:background="@color/metro_blue"
            android:layout_margin="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_google_sign_in"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/verto"
            android:layout_marginTop="20dp"
            android:layout_height="60dp"
            android:backgroundTint="@android:color/white"
            android:text="Continue with Google"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textAllCaps="false"
            app:icon="@drawable/ic_google_logo"
            app:iconGravity="textStart"
            app:iconTint="@null"
            app:strokeColor="#D1D1D1"
            app:strokeWidth="1dp"
            app:cornerRadius="30dp"
            app:elevation="2dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    android:textSize="10dp"
    android:text="Walk. Drive. Ride\nDeveloped By Yashwenth S"
    android:gravity="center"
    android:layout_marginVertical="20dp"
    android:alpha="0.5"
    android:textColor="@color/black"/>


</androidx.constraintlayout.widget.ConstraintLayout>